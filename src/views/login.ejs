<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8">
      <h1 class="text-center">Login</h1>

      <p class="text-center lead">Criar conta ou entrar</p>

      <%- include('includes/messages') %>

      <div class="row">
        <div class="col-lg">
          <h4>FaÃ§a o seu cadastro</h4>
          <form class="form-cadastro" action="/login/register" method="POST" >
            <input type="hidden" name="_csrf" value=<%= csrfToken %> />
            <div class="mb-3">
              <label class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label class="form-label"
                >Senha</label
              >
              <input
                type="password"
                class="form-control"
                name="password"
              />
            </div>
            <button type="submit" class="btn btn-primary">
              Criar minha conta
            </button>
          </form>
        </div>
        <div class="col-lg">
          <h4>Entrar</h4>

          <form class="form-login" action="/login/login" method="POST" >
            <input type="hidden" name="_csrf" value=<%= csrfToken %> />
            <div class="mb-3">
              <label class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label class="form-label"
                >Senha</label
              >
              <input
                type="password"
                class="form-control"
                name="password"
              />
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
